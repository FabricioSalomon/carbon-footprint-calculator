{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "moduleResolution": "node",
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ES2020",
    "outDir": "dist",
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "./coverage",
    "./dist",
    "__tests__",
    "jest.config.js",
    "node_modules"
  ]
}
